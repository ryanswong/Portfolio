---
export interface Props {
  title?: string;
  id: string;
  fullPage?: boolean;
}
const { title, id, fullPage=false } = Astro.props;
---

<div
  id={id}
  class=`overflow-x-hidden scroll-mt-20 px-12 max-w-screen-lg mx-auto ${fullPage ? "min-h-screen flex flex-col" : "mb-48"}`
>
  {title ? <h2 class="mb-16 text-5xl font-semibold m-auto">{title}</h2> : null}
  <slot />
</div>
